<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/plugins/jeasyui/themes/black/easyui.css">
    <link rel="stylesheet" type="text/css" href="~/plugins/jeasyui/themes/icon.css">
    <link rel="stylesheet" type="text/css" href="~/plugins/jeasyui/themes/color.css">
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <script type="text/javascript" src="~/plugins/jeasyui/jquery.min.js"></script>
    <script type="text/javascript" src="~/plugins/jeasyui/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="~/plugins/jeasyui/locale/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript" src="~/js/jeasyuiextend.js"></script>
    <script type="text/javascript" src="~/js/common.js"></script>
    <script type="text/javascript" src="~/js/sitemenus.js"></script>
</head>
<body>
    <div class="easyui-layout" data-options="fit:true">
        <div id="header" class="header" data-options="region:'north',title:'',split:true" style="height:69px;overflow:hidden;background:#4a8bfc;">
            <div class="pdl5 sitetitle">
                后台管理系统
            </div>
            <div class="lvUser">
                管理员
            </div>
            <span class="clr"></span>
        </div>
        <div id="footer" data-options="region:'south',title:'',split:true" style="height:38px; padding:5px;">
            <div class="aa">
                &copy; 2019 - 企业后台管理系统
            </div>
        </div>
        <div id="west" data-options="region:'west',title:'菜单导航',split:true" style="width:200px; padding:5px;">
            <div id="accUcMenu" class="easyui-accordion acc" data-options="fit:true,onSelect:sitemenus.onAccSelect,onAdd:sitemenus.onAccAdd"></div>
        </div>
        <div id="pageMain" data-options="region:'center',title:''" style="padding-left:5px;">
            @RenderBody()
            <div id="tt" class="easyui-tabs" data-options="fit:true,border:false,plain:true,tabHeight:36">
                <div title="首页" style="padding:20px;display:none;"></div>
            </div>
        </div>
    </div>
    <div id="dlgWaiting" data-options="closed:true,modal:true,collapsible:false,border:false" title="" style="width:32px;height:32px;padding:0;margin:0;"></div>

    <script type="text/javascript">
        $(function () {
            sitemenus.init();
        })
    </script>
</body>
</html>
